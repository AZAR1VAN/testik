{
  "title": "Kubernetes Cluster Overview",
  "uid": "k8s-cluster",
  "schemaVersion": 39,
  "refresh": "15s",
  "time": {
    "from": "now-30m",
    "to": "now"
  },
  "tags": [
    "kubernetes",
    "cluster",
    "infrastructure"
  ],
  "timezone": "browser",
  "panels": [
    {
      "id": 100,
      "type": "row",
      "title": "\ud83d\udfe2 Cluster Health",
      "gridPos": {
        "h": 1,
        "w": 24,
        "x": 0,
        "y": 0
      },
      "collapsed": false
    },
    {
      "id": 1,
      "title": "Scrape Targets Up",
      "type": "stat",
      "datasource": {
        "type": "prometheus",
        "uid": "P4169E866C3094E38"
      },
      "targets": [
        {
          "expr": "count(up == 1)",
          "legendFormat": "Up"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "steps": [
              {
                "color": "red",
                "value": null
              },
              {
                "color": "green",
                "value": 1
              }
            ]
          }
        }
      },
      "gridPos": {
        "h": 4,
        "w": 4,
        "x": 0,
        "y": 1
      }
    },
    {
      "id": 2,
      "title": "Cluster CPU Cores",
      "type": "stat",
      "datasource": {
        "type": "prometheus",
        "uid": "P4169E866C3094E38"
      },
      "targets": [
        {
          "expr": "machine_cpu_cores",
          "legendFormat": "Cores"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "fixedColor": "blue",
            "mode": "fixed"
          }
        }
      },
      "gridPos": {
        "h": 4,
        "w": 4,
        "x": 4,
        "y": 1
      }
    },
    {
      "id": 3,
      "title": "Cluster Memory Total",
      "type": "stat",
      "datasource": {
        "type": "prometheus",
        "uid": "P4169E866C3094E38"
      },
      "targets": [
        {
          "expr": "machine_memory_bytes",
          "legendFormat": "Memory"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "color": {
            "fixedColor": "purple",
            "mode": "fixed"
          }
        }
      },
      "gridPos": {
        "h": 4,
        "w": 4,
        "x": 8,
        "y": 1
      }
    },
    {
      "id": 4,
      "title": "Running Containers",
      "type": "stat",
      "datasource": {
        "type": "prometheus",
        "uid": "P4169E866C3094E38"
      },
      "targets": [
        {
          "expr": "kubelet_running_containers{container_state=\"running\"}",
          "legendFormat": "Running"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "fixedColor": "green",
            "mode": "fixed"
          }
        }
      },
      "gridPos": {
        "h": 4,
        "w": 4,
        "x": 12,
        "y": 1
      }
    },
    {
      "id": 5,
      "title": "Running Pods",
      "type": "stat",
      "datasource": {
        "type": "prometheus",
        "uid": "P4169E866C3094E38"
      },
      "targets": [
        {
          "expr": "kubelet_running_pods",
          "legendFormat": "Pods"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "fixedColor": "orange",
            "mode": "fixed"
          }
        }
      },
      "gridPos": {
        "h": 4,
        "w": 4,
        "x": 16,
        "y": 1
      }
    },
    {
      "id": 6,
      "title": "VM Active Series",
      "type": "stat",
      "datasource": {
        "type": "prometheus",
        "uid": "P4169E866C3094E38"
      },
      "targets": [
        {
          "expr": "vm_cache_entries{type=\"storage/hour_metric_ids\"}",
          "legendFormat": "Series"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "fixedColor": "semi-dark-yellow",
            "mode": "fixed"
          }
        }
      },
      "gridPos": {
        "h": 4,
        "w": 4,
        "x": 20,
        "y": 1
      }
    },
    {
      "id": 101,
      "type": "row",
      "title": "\ud83d\udcca CPU & Memory Usage",
      "gridPos": {
        "h": 1,
        "w": 24,
        "x": 0,
        "y": 5
      },
      "collapsed": false
    },
    {
      "id": 7,
      "title": "Container CPU Usage (top 10)",
      "type": "timeseries",
      "description": "CPU usage per pod from cAdvisor (grouped by pod label)",
      "datasource": {
        "type": "prometheus",
        "uid": "P4169E866C3094E38"
      },
      "targets": [
        {
          "expr": "topk(10, sum by (pod) (rate(container_cpu_usage_seconds_total{pod!=\"\"}[5m])))",
          "legendFormat": "{{pod}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "custom": {
            "fillOpacity": 20,
            "lineWidth": 2
          }
        }
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 6
      }
    },
    {
      "id": 8,
      "title": "Container Memory Usage (top 10)",
      "type": "timeseries",
      "description": "Working set memory per pod",
      "datasource": {
        "type": "prometheus",
        "uid": "P4169E866C3094E38"
      },
      "targets": [
        {
          "expr": "topk(10, sum by (pod) (container_memory_working_set_bytes{pod!=\"\"}))",
          "legendFormat": "{{pod}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "custom": {
            "fillOpacity": 20,
            "lineWidth": 2
          }
        }
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 6
      }
    },
    {
      "id": 102,
      "type": "row",
      "title": "\ud83c\udf10 Network & Disk I/O",
      "gridPos": {
        "h": 1,
        "w": 24,
        "x": 0,
        "y": 14
      },
      "collapsed": false
    },
    {
      "id": 9,
      "title": "Network Receive (total)",
      "type": "timeseries",
      "datasource": {
        "type": "prometheus",
        "uid": "P4169E866C3094E38"
      },
      "targets": [
        {
          "expr": "sum by (interface) (rate(container_network_receive_bytes_total[5m]))",
          "legendFormat": "{{interface}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "Bps",
          "custom": {
            "fillOpacity": 15,
            "lineWidth": 2
          }
        }
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 15
      }
    },
    {
      "id": 10,
      "title": "Network Transmit (total)",
      "type": "timeseries",
      "datasource": {
        "type": "prometheus",
        "uid": "P4169E866C3094E38"
      },
      "targets": [
        {
          "expr": "sum by (interface) (rate(container_network_transmit_bytes_total[5m]))",
          "legendFormat": "{{interface}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "Bps",
          "custom": {
            "fillOpacity": 15,
            "lineWidth": 2
          }
        }
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 15
      }
    },
    {
      "id": 103,
      "type": "row",
      "title": "\u2699\ufe0f Storage & VictoriaMetrics",
      "gridPos": {
        "h": 1,
        "w": 24,
        "x": 0,
        "y": 23
      },
      "collapsed": false
    },
    {
      "id": 11,
      "title": "Filesystem Usage by Device",
      "type": "timeseries",
      "datasource": {
        "type": "prometheus",
        "uid": "P4169E866C3094E38"
      },
      "targets": [
        {
          "expr": "sum by (device) (container_fs_usage_bytes{device!=\"\"})",
          "legendFormat": "{{device}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "custom": {
            "fillOpacity": 15
          }
        }
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 24
      }
    },
    {
      "id": 12,
      "title": "VictoriaMetrics Ingestion Rate",
      "type": "timeseries",
      "datasource": {
        "type": "prometheus",
        "uid": "P4169E866C3094E38"
      },
      "targets": [
        {
          "expr": "rate(vm_rows_inserted_total[5m])",
          "legendFormat": "{{type}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "custom": {
            "fillOpacity": 15
          }
        }
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 24
      }
    },
    {
      "id": 13,
      "title": "Scrape Targets Health",
      "type": "table",
      "datasource": {
        "type": "prometheus",
        "uid": "P4169E866C3094E38"
      },
      "targets": [
        {
          "expr": "up",
          "format": "table",
          "instant": true
        }
      ],
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "Time": true,
              "__name__": true
            },
            "renameByName": {
              "instance": "Instance",
              "job": "Job",
              "Value": "Status"
            }
          }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "steps": [
              {
                "color": "red",
                "value": null
              },
              {
                "color": "green",
                "value": 1
              }
            ]
          }
        }
      },
      "gridPos": {
        "h": 6,
        "w": 24,
        "x": 0,
        "y": 32
      }
    }
  ]
}